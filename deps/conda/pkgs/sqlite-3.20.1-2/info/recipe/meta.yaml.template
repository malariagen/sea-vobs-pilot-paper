{% set version="3.20.1" %}

package:
  name: sqlite
  version: {{ version }}

source:
  url: https://www.sqlite.org/2017/sqlite-autoconf-3190300.tar.gz
  sha256: 06129c03dced9f87733a8cba408871bd60673b8f93b920ba8d815efab0a06301
  patches:
    - expose_symbols.patch  # [win]

build:
  number: 2
  skip: True  # [win and py36]
  features:
    - vc9  # [win and py27]
    - vc14  # [win and (py35 or py36)]

requirements:
  build:
    - toolchain
    - pkg-config    # [not win]
    - python        # [win]
    - ncurses 5.9   # [not win]
    - readline 7.0  # [not win]
    - vc 9          # [win and py27]
    - vc 14         # [win and (py35 or py36)]
  run:
    - ncurses 5.9   # [not win]
    - readline 7.0  # [not win]
    - vc 9          # [win and py27]
    - vc 14         # [win and (py35 or py36)]

test:
  commands:
    - sqlite3 --version
    - if not exist %LIBRARY_BIN%\sqlite3.dll exit 1  # [win]
    - if not exist %LIBRARY_LIB%\sqlite3.lib exit 1  # [win]
    - if not exist %LIBRARY_INC%\sqlite3.h exit 1  # [win]
    - conda inspect linkages -p $PREFIX $PKG_NAME  # [not win]
    - conda inspect objects -p $PREFIX $PKG_NAME  # [osx]

about:
  home: http://www.sqlite.org/
  license: Public-Domain (http://www.sqlite.org/copyright.html)
  summary: 'Implements a self-contained, zero-configuration, SQL database engine.'

extra:
  recipe-maintainers:
    - jakirkham
    - jjhelmus
    - msarahan
    - ocefpaf
    - snorfalorpagus
